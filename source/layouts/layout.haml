      #main-content{:role => "main"}
        -# Page content gets rendered here
        - if current_page.data.bodyclass == "city"
          .cafe
            .video
              = image_tag "/images/temp/image-placeholder-the_barn.jpg"
              - link_to 'http://instagram.com' do
                .play-button
            .details
